@model BlogMundoDesignMVC.Models.Postagem

@{
    Layout = null;
}

<header class="hero-image" role="banner" style="background-image: url(/Content/img/default-single-hero-with-sidebar.jpg);">
    <span class="menu-trigger animated fadeInDown">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
    </span>
    <div id="menu-target">
        <ul>
            <li><i class="fa fa-home"></i>@Html.ActionLink("Home", "Index")</li>
            <li><i class="fa fa-anchor"></i><a href="page.html">About</a></li>
            <li><i class="fa fa-paper-plane"></i><a href="contact.html">Contact</a></li>
        </ul>
        <hr>
    </div>
</header>


<main class="container">
    <div class="row">
        <div class="col-xs-12 col-md-8 single-content-sidebar">

            <h1>@Model.TituloPostagem</h1>
            <p class="subtitle">@Model.SubtituloPostagem</p>
            <p>@Model.ConteudoPrimeiroNivelPostagem</p>
            <p class="pullquote">@Model.TituloMeioPostagem</p>

            <p>@Model.ConteudoSegundoNivelPostagem</p>

        </div><!-- main-content/col -->
        @* Conteúdo lateral direito da postagem *@
        <div class="col-xs-12 col-md-3 col-md-offset-1 single-content-sidebar-area">
            <img src="~/Content/img/profile-1.jpg" class="user-icon " alt="user-image">
            <div class="meta">
                <div class="sidebar-info">
                    <a href="#">@Model.NomeAutor</a>
                </div>
                <div class="sidebar-readtime">
                    <i class="fa fa-bookmark"></i> @Model.DataPostagem
                </div>
            </div>
            
            <h2 class="favorites">Fique por dentro</h2>
            <a href="category.html">
                <div class="similar-cat">
                    <img src="~/Content/img/similar-cat-1.jpg">
                    <h3>Titulo Chamativo</h3>
                </div>
            </a>

        </div>
        @* Fim do conteúdo latera da postagem *@
        
        

    </div>
</main>
<footer class="single without-readmore">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-2">
                <img src="~/Content/img/profile-1.jpg" class="user-icon " alt="user-image">
            </div>
            <div class="col-xs-12 col-sm-6">
                <div class="category-list">
                    <p>Publicado em <span>@Model.DataPostagem</span></p>
                    <p><a href="#">@Model.NomeAutor</a>
                    <div class="other-catergories">
                        @*<h3>Also found in</h3>
                        <ul>
                            <li><a href="#">Stories</a>,</li>
                            <li><a href="#">Life</a>,</li>
                            <li><a href="#">Adventures</a></li>
                        </ul>*@
                    </div>
                </div>
            </div><!-- end col -->
            <div class="col-xs-12 col-sm-4">
                <div class="social">
                    <p>
                        Compartilhe este Blog Post
                        <div class="social-links">
                            <a class="social-icon" href="#" data-platform="twitter" data-message="Message about this post" data-url="http://writertheme.com/post"><i class="fa fa-twitter"></i></a>
                            <a class="social-icon" href="#" data-platform="facebook" data-message="Message about this post" data-url="http://writertheme.com/post"><i class="fa fa-facebook-official"></i></a>
                            <a class="social-icon" data-platform="mail" href="mailto:support@writertheme.com"><i class="fa fa-envelope"></i></a>
                        </div>
                </div>
            </div>
        </div><!-- end row -->
    </div>
</footer>


@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

@Scripts.Render("~/bundles/jquery")
@*@Scripts.Render("~/bundles/bootstrap")*@

